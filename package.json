{
  "name": "react-ts-boilerplate",
  "version": "1.0.0",
  "engines": {
    "node": ">=12.16"
  },
  "scripts": {
    "dev": "webpack-dev-server --mode development --config webpack-dev.config.js --inline --progress --open",
    "build": "webpack --mode production --config webpack-prod.config.js --progress",
    "ts-lint": "tsc --skipLibCheck --noEmit --project tsconfig.json",
    "lint": "npm run ts-lint && eslint ./ --ext .js,.ts,.tsx",
    "lint:fix": "npm run ts-lint && eslint ./ --fix --ext .js,.ts,.tsx",
    "prettier": "prettier */**/*.{js,ts,tsx} --write",
    "test": "jest",
    "preversion": "npm run prettier && npm run lint:fix && npm run test",
    "version": "npm run build && git add package.json && git commit "
  },
  "dependencies": {
    "@material-ui/core": "^4.9.13",
    "@material-ui/icons": "^4.9.1",
    "date-fns": "^2.16.1",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-particles-js": "^3.4.1",
    "react-redux": "^7.2.2",
    "react-router-dom": "5.1.2",
    "redux": "^4.0.5",
    "redux-devtools": "^3.7.0",
    "redux-devtools-dock-monitor": "^1.2.0",
    "redux-logger": "^3.0.6",
    "redux-persist": "^6.0.0",
    "reduxsauce": "^1.2.0"
  },
  "devDependencies": {
    "@babel/core": "7.9.0",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/plugin-syntax-dynamic-import": "7.8.3",
    "@babel/plugin-transform-runtime": "^7.9.6",
    "@babel/preset-env": "7.9.0",
    "@babel/preset-react": "7.9.4",
    "@babel/preset-typescript": "7.9.0",
    "@loadable/component": "^5.12.0",
    "@svgr/webpack": "^5.4.0",
    "@types/enzyme": "3.10.5",
    "@types/jest": "25.1.4",
    "@types/node": "12.12.31",
    "@types/react": "16.9.25",
    "@types/react-dom": "16.9.5",
    "@types/react-router-dom": "5.1.3",
    "@types/styled-components": "5.0.1",
    "@typescript-eslint/eslint-plugin": "2.25.0",
    "@typescript-eslint/parser": "2.25.0",
    "babel-jest": "25.2.0",
    "babel-loader": "8.1.0",
    "babel-plugin-import": "1.13.0",
    "babel-plugin-module-resolver": "^4.0.0",
    "babel-plugin-styled-components": "1.10.7",
    "clean-webpack-plugin": "3.0.0",
    "compression-webpack-plugin": "3.1.0",
    "css-loader": "^3.5.3",
    "enzyme": "3.11.0",
    "enzyme-adapter-react-16": "1.15.2",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.10.1",
    "eslint-plugin-prettier": "3.1.2",
    "eslint-plugin-react": "7.19.0",
    "eslint-plugin-react-hooks": "2.5.1",
    "eslint-plugin-simple-import-sort": "5.0.2",
    "file-loader": "6.0.0",
    "html-webpack-plugin": "4.0.1",
    "husky": "4.2.3",
    "jest": "25.2.0",
    "jest-styled-components": "7.0.0",
    "jest-transform-stub": "2.0.0",
    "lint-staged": "10.0.9",
    "loadable-components": "2.2.3",
    "prettier": "2.0.2",
    "redux-devtools-extension": "2.13.8",
    "redux-devtools-log-monitor": "^2.1.0",
    "style-loader": "^1.2.1",
    "ts-jest": "25.2.1",
    "ts-node": "8.8.1",
    "typescript": "3.8.3",
    "webpack": "4.42.1",
    "webpack-cli": "3.3.11",
    "webpack-dev-server": "3.10.3",
    "webpack-merge": "4.2.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run ts-lint && lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "npm run prettier",
      "npm run lint:fix"
    ]
  }
}
